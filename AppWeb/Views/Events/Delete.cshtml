@model AppWeb.Models.Event

@{
    ViewData["Title"] = "Borrar Reserva";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        body, html {
            overflow: auto;
            font-family: 'Montserrat', sans-serif;
            height: 100%;
            margin: 0;
            padding-bottom: 50px; /* Ajusta este valor según tus necesidades para proporcionar espacio para la barra de desplazamiento */
        }

        h3 {
            color: red; /* Título en rojo oscuro */
        }

        .container-2 {
            background-color: floralwhite; /* Fondo negro para el contenedor */
            color: black; /* Texto blanco */
            border-color: #000000;
            padding: 20px;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1); /* Sombra ligera */
        }

        .row {
            margin-top: 20px;
        }

        .password-mask {
            letter-spacing: 8px; /* Espaciado entre caracteres para ocultar la contraseña */
        }

        .btn-danger {
            background-color: red; /* Botón de color rojo oscuro */
            border-color: red; /* Color del borde rojo oscuro */
            color: #ffffff; /* Texto blanco */
        }

            .btn-danger:hover {
                background-color: #c82333; /* Color rojo más oscuro al pasar el ratón */
                border-color: #bd2130;
            }

        .btn-secondary {
            background-color: #000000; /* Botón de color negro */
            border-color: #000000; /* Color del borde negro */
            color: #ffffff; /* Texto blanco */
        }

            .btn-secondary:hover {
                background-color: #1a1a1a; /* Color negro más oscuro al pasar el ratón */
                border-color: #1a1a1a;
            }

        dl.row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }

        dt.col-sm-2 {
            flex: 0 0 20%; /* Ancho del 20% para los nombres */
            padding-right: 15px; /* Espaciado a la derecha para los nombres */
            white-space: nowrap; /* Evitar el salto de línea para los nombres */
        }

        dd.col-sm-10 {
            flex: 0 0 80%; /* Ancho del 80% para los detalles */
        }
    </style>
</head>
<body>

    <div class="container-2">
        <h3>¿Estás seguro de eliminar esta Reserva?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Nombre Reserva
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    Fecha Inicio
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Start)
                </dd>
                <dt class="col-sm-2">
                    Fecha Fin
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.End)
                </dd>
                <dt class="col-sm-2">
                    Estado de la Reserva
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado.NombreEstado)
                </dd>
                <dt class="col-sm-2">
                    Monto del Pago
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pago.Monto)
                </dd>
                <dt class="col-sm-2">
                    Usuario
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Cedula)
                </dd>
                <dt class="col-sm-2">
                    Nombre del Vehículo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Nombre)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="EventId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
            </form>
        </div>
    </div>

</body>
</html>