@model IEnumerable<AppWeb.Models.Event>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <title>Eventos</title>
    <style>
        body, html {
            overflow: auto;
            font-family: 'Montserrat', sans-serif;
            height: 100%;
            margin: 0;
            padding-bottom: 80px; /* Ajusta este valor según tus necesidades para proporcionar espacio para la barra de desplazamiento */
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
            margin-left: -13px; /* Ajusta el margen izquierdo según tus necesidades */
        }

        table {
            margin-top: 20px;
            width: 95%;
            margin: 0 auto; /* Centra la tabla horizontalmente */
            white-space: nowrap;
        }

        th, td {
            text-align: center;
            white-space: nowrap;
            border: 1px solid #dddddd; /* Añade bordes a las celdas */
            padding: 10px;
        }

        th {
            background-color: #f2f2f2; /* Fondo gris claro para las celdas de encabezado */
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px; /* Espacio entre botones y tabla */
            margin-left: 20px; /* Ajusta el margen izquierdo según tus necesidades */
        }

        .btn {
            font-family: 'Montserrat', sans-serif;
            margin-top: 10px;
        }

        .btn-create-new {
            margin-right: 770px; /* Ajusta el margen izquierdo del botón "Create New" */
        }

        .btn-secondary {
            margin-left: 0; /* Ajusta el margen izquierdo del botón "Volver al Inicio" */
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="btn-container">
            <!-- Botón de regreso a IndexMaster -->
            <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="IndexMaster" style="background-color: #000000; border-color: #000000;">Volver al Inicio</a>
            <a class="btn btn-primary btn-create-new" asp-action="Create" style="background-color: #FF6B00; border-color: #FF6B00;">Crear Nuevo</a>
        </div>

        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th>
                        Nombre Reserva
                    </th>
                    <th>
                        Fecha Inicio
                    </th>
                    <th>
                        Fecha Fin
                    </th>
                    <th>
                        Estado de la Reserva
                    </th>
                    <th>
                        Monto del Pago
                    </th>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Nombre del Vehículo
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Start)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.End)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado.NombreEstado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pago.Monto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Cedula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehiculo.Nombre)
                        </td>
                        <td>
                            <a class="btn btn-info" asp-action="Edit" style="background-color: #FF6B00; border-color: #FF6B00;" asp-route-id="@item.EventId">Editar</a> |
                            <a class="btn btn-secondary" asp-action="Details" style="background-color: #000000; border-color: #000000;" asp-route-id="@item.EventId">Detalles</a> |
                            <a class="btn btn-danger" asp-action="Delete" style="background-color: red; border-color: red;" asp-route-id="@item.EventId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
