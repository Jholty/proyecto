@model AppWeb.Models.Vehiculo

@{
    ViewData["Title"] = "Editar Vehiculo";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        body, html {
            overflow: auto;
            font-family: 'Montserrat', sans-serif;
            height: 100%;
            margin: 0;
            padding-bottom: 50px;
            background-color: #f8f9fa; /* Fondo gris claro */
        }

        h4 {
            color: #ff8c00; /* Título en naranja */
        }

        .container {
            margin-top: 10px;
        }

        .form-container {
            max-width: 400px;
            margin: 0 auto;
            background-color: #ffffff; /* Fondo blanco */
            border: 1px solid #333; /* Borde negro */
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%; /* Ajustar el ancho al 100% */
        }

        .btn-primary {
            background-color: #ff8c00; /* Botón de color naranja */
            border-color: #ff8c00; /* Color del borde naranja */
        }

            .btn-primary:hover {
                background-color: #d17f00; /* Color naranja oscuro al pasar el ratón */
                border-color: #d17f00;
            }

        .btn-secondary {
            background-color: #333; /* Botón de color negro */
            border-color: #333; /* Color del borde negro */
            color: #fff; /* Letras blancas */
        }

            .btn-secondary:hover {
                background-color: #000; /* Color negro oscuro al pasar el ratón */
                border-color: #000;
            }

        .btn-back {
            position: absolute;
            top: 462px;
            right: 40px;
            margin-top: 15px;
        }
    </style>
</head>
<body class="text-center">

    <div class="container">
        <div class="form-container">
            <h4>Editar Vehículo</h4>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdAuto" />
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
              <div class="form-group">
                            <label asp-for="Año" class="control-label">Año</label>
                            <select asp-for="Año" class="form-control" id="yearSelector"></select>
                            <span asp-validation-for="Año" class="text-danger"></span>
                        </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
             <div class="form-group">
                    <label asp-for="Imagen.ImagenData" class="control-label">Imagen del Auto</label>
                    <input type="file" name="imagenData" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
            <a class="btn btn-secondary btn-back" asp-action="Index">Volver</a>
        </div>
    </div>
    <script>
        // Función para generar opciones de años
        function generateYearOptions(startYear, endYear) {
            var options = '';
            for (var year = endYear; year >= startYear; year--) {
                options += '<option value="' + year + '">' + year + '</option>';
            }
            return options;
        }

        // Función para inicializar el selector de año
        document.addEventListener('DOMContentLoaded', function () {
            initializeYearSelector();
        });

        function initializeYearSelector() {
            var yearSelector = document.getElementById('yearSelector');
            var currentYear = new Date().getFullYear();
            var startYear = currentYear - 50; // Puedes ajustar el rango de años según tus necesidades
            yearSelector.innerHTML = generateYearOptions(startYear, currentYear);
        }
    </script>
</body>
</html>
