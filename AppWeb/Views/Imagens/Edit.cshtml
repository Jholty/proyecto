@model AppWeb.Models.Imagen

@{
    ViewData["Title"] = "Editar Imagen";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        body, html {
            overflow: auto;
            font-family: 'Montserrat', sans-serif;
            height: 100%;
            margin: 0;
            padding-bottom: 50px;
            background-color: #f8f9fa; /* Fondo gris claro */
        }

        h4 {
            color: #ff8c00; /* Título en naranja */
        }

        .container {
            margin-top: 10px;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
            background-color: #ffffff; /* Fondo blanco */
            border: 1px solid #333; /* Borde negro */
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%; /* Ajustar el ancho al 100% */
        }

        .btn-primary {
            background-color: #ff8c00; /* Botón de color naranja */
            border-color: #ff8c00; /* Color del borde naranja */
        }

            .btn-primary:hover {
                background-color: #d17f00; /* Color naranja oscuro al pasar el ratón */
                border-color: #d17f00;
            }

        .btn-secondary {
            background-color: #333; /* Botón de color negro */
            border-color: #333; /* Color del borde negro */
            color: #fff; /* Letras blancas */
        }

            .btn-secondary:hover {
                background-color: #000; /* Color negro oscuro al pasar el ratón */
                border-color: #000;
            }

        .btn-back {
            position: absolute;
            top: 208px;
            right: 60px;
            margin-top: 15px;
        }
    </style>
</head>
<body class="text-center">

    <div class="container">
        <div class="form-container">
            <h4>Editar Imagen</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdImagen" />
                <div class="form-group">
                    <label asp-for="ImagenData" class="control-label">Imagen del Coche</label>
                    <input type="file" asp-for="ImagenData" class="form-control" />
                    <span asp-validation-for="ImagenData" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagenMimeType" class="control-label">Nombre de la Imagen</label>
                    <input asp-for="ImagenMimeType" class="form-control" />
                    <span asp-validation-for="ImagenMimeType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
            <a class="btn btn-secondary btn-back" asp-action="Index">Volver</a>
        </div>
    </div>

</body>
</html>

