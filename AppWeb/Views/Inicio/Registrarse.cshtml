<body>

    <div class="container">

        <div class="background-overlay"></div>

        <img style="width: 640px; height: 450px; left: 10px; top: 100px; position: absolute" src="~/image/AutoIndex.png" />

        <div class="card-container">
            <div class="card">
                <div class="card-body">

                    <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                        <label class="form-label" for="Cedula">Número de Cédula</label>
                        <div class="icon-input-group-cedula">
                            <img src="~/image/iconocedula3.png" alt="Cédula" width="25" height="25" class="d-inline-block align-top">
                            <input class="form-control-cedula" type="text" placeholder="Cédula o DNI" asp-for="Cedula" required pattern="[0-9]+" oninput="validarCedula(this)" />
                        </div>
                        <span asp-validation-for="Cedula" class="text-danger"></span>

                        <label class="form-label" for="Celular">Número Celular</label>
                        <div class="icon-input-group-celular" style="position: absolute; top: 60px; left: 275px;">
                            <img src="~/image/iconocelular.png" alt="Celular" width="25" height="25" class="d-inline-block align-top">
                            <input class="form-control-celular" type="text" placeholder="Número Celular" asp-for="Celular" required pattern="[0-9]+" oninput="validarCedula(this)" />
                        </div>
                        <span asp-validation-for="Celular" class="text-danger"></span>

                        <label class="form-label" for="NombreUsuario">Nombre Completo</label>
                        <div class="icon-input-group">
                            <img src="~/image/iconousuario.png" alt="Nombre" width="25" height="25" class="d-inline-block align-top">
                            <input class="form-control" type="text" placeholder="Nombre Completo" asp-for="NombreUsuario" required pattern="[A-Za-z\s]+" oninput="validarSoloLetras(this)" />
                        </div>
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>


                        <label class="form-label" for="Correo">Correo Electrónico</label>
                        <div class="icon-input-group-correo">
                            <img src="~/image/iconoemail3.png" alt="Correo" width="40" height="auto" class="d-inline-block align-top">
                            <input class="form-control" type="text" placeholder="Correo Electrónico" required asp-for="Correo" />
                        </div>
                        <span asp-validation-for="Correo" class="text-danger"></span>

                        <label class="form-label" for="Contrasena">Contraseña</label>
                        <div class="icon-input-group">
                            <img src="~/image/candadopassword.png" alt="Contraseña" width="25" height="25" class="d-inline-block align-top">
                            <input class="form-control" type="password" placeholder="Contraseña" required asp-for="Contrasena" id="contrasenaInput">


                            <div class="icon-input-group icon-input-group-password" onclick="togglePasswordVisibility()">
                                <img src="~/image/iconoverclave2.png" alt="Ver Clave" width="35" height="auto" class="password-icon" id="verClaveIcon">
                            </div>
                        </div>
                        <span asp-validation-for="Contrasena" class="text-danger"></span>

                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">REGISTRARSE</button>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <script>
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: '@ViewData["Mensaje"]',
                                    showCancelButton: false,
                                    confirmButtonColor: '#3085d6',
                                    confirmButtonText: 'OK'
                                });
                            </script>
                        }



                        <div>
                            <a href="@Url.Action("IniciarSesion", "Inicio")" class="btn btn-volver">INICIAR SESIÓN</a>
                        </div>

                    </form>


                </div>
            </div>
        </div>

        <div class="welcome-message">CREAR CUENTA</div>


        <div class="brand-title">Palms Cars</div>

        <div class="brand-title-duplicate">Palms Cars</div>

        <div class="brand-title-cedula">Cédula de Identidad</div>

        <div class="brand-title-celular">Número Celular</div>

        <div class="brand-title-nombres">Nombres Completo</div>

        <div class="brand-title-correo">Correo Electrónico</div>

        <div class="brand-title-contraseña">Contraseña</div>

        <div class="register-link">¿Ya tienes una cuenta? Inicia Sesión para Reservar tu Carro!</div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function validarCedula(input) {
            // Limitar la longitud de la cédula a 10 dígitos
            if (input.value.length > 10) {
                input.value = input.value.slice(0, 10);
            }
            // Eliminar caracteres no numéricos
            input.value = input.value.replace(/[^0-9]/g, '');
        }

        function validarSoloNumeros(input) {
            input.value = input.value.replace(/[^0-9]/g, ''); // Elimina caracteres no numéricos
        }

        function validarSoloLetras(input) {
            input.value = input.value.replace(/[^A-Za-z\s]/g, ''); // Elimina caracteres no alfabéticos ni espacios
        }
    </script>
    <script>
        function togglePasswordVisibility() {
            var contrasenaInput = document.getElementById('contrasenaInput');
            var verClaveIcon = document.getElementById('verClaveIcon');

            if (contrasenaInput.type === 'password') {
                contrasenaInput.type = 'text';
                verClaveIcon.src = '/image/iconoocultarclave.png'; // Ruta relativa o absoluta a la imagen de ojo cerrado
            } else {
                contrasenaInput.type = 'password';
                verClaveIcon.src = '/image/iconoverclave2.png'; // Ruta relativa o absoluta a la imagen de ojo abierto
            }

        }
    </script>
</body>

