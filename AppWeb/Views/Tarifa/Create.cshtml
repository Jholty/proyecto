@model AppWeb.Models.Pago

@{
    ViewData["Title"] = "Crear Tarifa";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        body, html {
            overflow: auto;
            font-family: 'Montserrat', sans-serif;
            height: 100%;
            margin: 0;
            padding-bottom: 50px;
            background-color: #f8f9fa; /* Fondo gris claro */
        }

        h4 {
            color: #ff8c00; /* Título en naranja */
        }

        .container {
            margin-top: 10px;
        }

        .form-container {
            max-width: 400px;
            margin: 0 auto;
            background-color: #ffffff; /* Fondo blanco */
            border: 1px solid #333; /* Borde negro */
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
        }

        .btn-primary {
            background-color: #ff8c00; /* Botón de color naranja */
            border-color: #ff8c00; /* Color del borde naranja */
        }

            .btn-primary:hover {
                background-color: #d17f00; /* Color naranja oscuro al pasar el ratón */
                border-color: #d17f00;
            }

        .btn-secondary {
            background-color: #333; /* Botón de color negro */
            border-color: #333; /* Color del borde negro */
            color: #fff; /* Letras blancas */
        }

            .btn-secondary:hover {
                background-color: #000; /* Color negro oscuro al pasar el ratón */
                border-color: #000;
            }

        .btn-back {
            position: absolute;
            top: 223px;
            right: 80px;
            margin-top: 15px;
        }
    </style>


</head>
<body class="text-center">

    <div class="container">
        <div class="form-container">
            <h4 class="mb-4">Nuevo Monto</h4>
            <form asp-action="Create" onsubmit="return validateForm()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Monto" class="control-label">Monto</label>
                    <input asp-for="Monto" class="form-control" pattern="[0-9]+" required />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Monto</label>
                    <input asp-for="Nombre" class="form-control" pattern="[a-zA-Z\s]+" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>

            <a class="btn btn-secondary btn-back" asp-action="Index">Volver</a>
        </div>
    </div>
</body>
</html>
