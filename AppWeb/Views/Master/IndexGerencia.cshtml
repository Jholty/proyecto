@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: antiquewhite; /* Fondo negro */
            color: #FFFFFF; /* Letras blancas */
        }

        .card {
            margin-bottom: 20px;
            background-color: #FFFFFF; /* Cartas de color blanco por defecto */
            color: #000000; /* Letras negras por defecto */
            transition: background-color 0.3s ease; /* Transición suave */
        }

            .card:hover {
                background-color: #FF6B00; /* Color de las cartas al pasar el mouse */
            }

        .card-title {
            font-size: 22px; /* Tamaño de fuente un poco más pequeño para el mensaje de bienvenida */
            font-weight: bold; /* Negrita */
            font-family: 'Montserrat', sans-serif; /* Fuente Montserrat */
        }

        .card-body {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-link {
            color: #FF6B00; /* Letras FF6B00 por defecto en "Ir" */
            font-size: 18px; /* Tamaño de letra más grande */
            text-decoration: none;
            transition: color 0.3s ease; /* Transición suave */
        }

        .card:hover .nav-link {
            color: #000000; /* Color de "Ir" al pasar el mouse */
        }

        .welcome-message {
            font-family: 'Montserrat', sans-serif; /* Fuente Montserrat para el mensaje de bienvenida */
            font-weight: bold; /* Negrita */
            margin-bottom: 10px; /* Margen inferior reducido */
            color: #000000;
        }

        .large-text {
            font-size: 28px; /* Tamaño de fuente más grande para el mensaje "¿Qué deseas hacer?" */
            font-weight: bold; /* Negrita */
            margin-top: 20px; /* Margen superior agregado */
            color: #FF6B00;
        }
    </style>
</head>
<body>
<div class="text-center">
        <h1 class="display-4" style="color: black;">Bienvenido, Gerente @ViewData["nombreUsuario"]</h1>


    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tarifa</h5>
                <a class="nav-link text-dark" asp-controller="Tarifa" asp-action="Index">Ir &rarr;</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card w-100">
            <div class="card-body">
                <h5 class="card-title">Reserva</h5>
                <a class="nav-link text-dark" asp-controller="Events" asp-action="Index">Ir &rarr;</a>
            </div>
        </div>
    </div>
</div>

    <!-- Bootstrap JS y dependencias (jQuery) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
